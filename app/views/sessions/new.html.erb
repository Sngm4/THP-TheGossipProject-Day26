<%= form_tag url_for(action: 'create'), method: "post", class:"row g-3" do %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="col-auto">
    <%= label_tag 'E-mail' %><br>
    <%= email_field_tag 'session_email', nil, placeholder:"email@exemple.com" %>
  </div>
  <div class="col-auto">
    <%= label_tag 'Mot de passe' %><br>
    <%= password_field_tag 'session_password', nil, placeholder:"Mot de passe" %>
  </div>
  <br>
  <%= submit_tag "Se connecter", class:"btn btn-info mt-4 mb-4" %>
<% end %>